  <version>1.0.0</version>
  <description>MOD_FSDIRECTORY_XML_DESCRIPTION</description>
  <namespace>Joomla\Module\FSDirectory</namespace>
  <files>
    <filename module="mod_fsdirectory">mod_fsdirectory.php</filename>
    <filename>mod_fsdirectory.xml</filename>
    <folder>tmpl</folder>
    <folder>Helper</folder>
    <folder>language</folder>
  </files>
  <config>
    <fields name="params">
      <fieldset name="basic">
	<field name="displayName"
	       type="text"
	       label="MOD_FSDIRECTORY_DISPLAY_NAME_LABEL" />
	<field name="path"
	       type="text"
	       label="MOD_FSDIRECTORY_PATH_LABEL" />
	<field name="recurse"
	       type="checkbox"
	       label="MOD_FSDIRECTORY_RECURSE_LABEL"
	       checked="0" />
	<field name="allowedExtensions"
	       type="text"
	       label="MOD_FSDIRECTORY_ALLOWED_EXTENSIONS_LABEL"
	       default="pdf" />
	<field name="target"
	       type="text"
	       label="MOD_FSDIRECTORY_TARGET_LABEL" />
      </fieldset>
    </fields>
  </config>
</extension>
